@model Proje_OPP_C__Katmanlı_Mimari_.Entity.Customer
@{
    ViewData["Title"] = "AddCustomer";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Müşteri Ekle</h1>
<form method="post">
    @Html.Label("Müşteri Ad")
    @Html.TextBoxFor(x=>x.CustomerName,new {@class="form-control"})
    <br />
    @Html.Label("City")
    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    <br />
   <button class="btn btn-primary">Müşteri Ekle</button>
</form>

