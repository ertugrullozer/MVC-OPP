@using Proje_OPP_C__Katmanlı_Mimari_.Entity
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Ürün Sayfası</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Fiyat</th>
        <th>Stock</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td><a class="btn btn-danger" href="/Product/DeleteProduct/@item.Id">Sil</a></td>
            <td><a class="btn btn-primary" href="/Product/UpdateProduct/@item.Id">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Product/AddProduct" class="btn btn-primary">Yeni Ürün Girişi</a>