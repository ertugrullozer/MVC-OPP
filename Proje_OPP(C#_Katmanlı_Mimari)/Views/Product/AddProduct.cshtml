@model Proje_OPP_C__Katmanlı_Mimari_.Entity.Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Ürün Ekleme Sayfası</h1>

<form method="post">
   @Html.Label("Ürün Adı")
   @Html.TextBoxFor(x=>x.Name,new {@class="form-control"})
   <br />
   @Html.Label("Fiyat")
   @Html.TextBoxFor(x=>x.Price,new {@class="form-control"})
   <br />
   @Html.Label("Stok Sayısı")
   @Html.TextBoxFor(x=>x.Stock,new {@class="form-control"})
   <br />
   <button class="btn btn-outline">Ürün Ekle</button>
</form>
